---
import Title from "./Title.astro"
import SectionContainer from "./SectionContainer.astro";
import ItemEducacion from "./ItemEducacion.astro";

import AstroIcon from "./icons/astroIcon.astro";
import ReactIcon from "./icons/reactIcon.astro";
import TailwindIcon from "./icons/tailwindIcon.astro";
import PreactIcon from "./icons/preactIcon.astro";
import htmlIcon from "./icons/htmlIcon.astro";
import cssIcon from "./icons/cssIcon.astro";
import jsIcon from "./icons/javascriptIcon.astro";
import tsIcon from "./icons/typescriptIcon.astro";

import gitIcon from "./icons/gitIcon.astro";


import PixelCard from "./PixelCard";

const MAIN_TECNOLOGIES = [
    {
        name: "astro",
        website: "https://astro.build/",
        icon: AstroIcon,
    },
    {
        name: "react",
        website: "https://react.dev/",
        icon: ReactIcon,
    },
    {
        name: "tailwind",
        website: "https://tailwindcss.com/",
        icon: TailwindIcon,
    },
    {
        name: "preact",
        website: "https://preactjs.com/",
        icon: PreactIcon,
    },
    {
        name: "html",
        website: "https://developer.mozilla.org/en-US/docs/Web/HTML",
        icon: htmlIcon,
    },
    {
        name: "css",
        website: "https://developer.mozilla.org/en-US/docs/Web/CSS",
        icon: cssIcon,
    },
    {
        name: "js",
        website: "https://developer.mozilla.org/en-US/docs/Web/JavaScript",
        icon: jsIcon,
    },
    {
        name: "ts",
        website: "https://www.typescriptlang.org/",
        icon: tsIcon,
    },
    {
        name: "git",
        website: "https://git-scm.com/",
        icon: gitIcon,
    },
]
const EDUCATION_ITEMS = [
    {
        title: "Entrando al Mundo de la Programación",
        date: "20 de Noviembre de 2020",
        description: "Por primera vez estaba viendo lo que era programar, empezando por realizar sitios web con CSS, HTML y JS vanilla. Aprendia mediante documentaciones y videos acerca del desarrollo web.",
    },
    {
        title: "Inicio Carrera de Programación",
        date: "15 de Febrero de 2024",
        description: "Dando los primeros pasos como futuro programador matriculado. Empecé en la Tecnicatura en Programación en la <a class='text-blue-300 font-semibold underline' href='https://fra.utn.edu.ar/'>UTN-FRA</a>",
    },
    {
        title: "Desarrollando Sitios Web",
        date: "En la Actualidad",
        description: "Actualmente, me sigo formando en la <a class='text-blue-300 font-semibold underline' href='https://fra.utn.edu.ar/'>UTN-FRA</a>, pero estoy como desarrollador independiente de aplicaciones web.",
    },
];



---

<SectionContainer
  id="experiencia"
>
    <Title iconName="TrajectoryIcon">Experiencia</Title>
    <ol class="relative border-s border-gray-200 dark:border-gray-700">
        {    
            EDUCATION_ITEMS.map((social) =>(
                <ItemEducacion title={social.title} date={social.date} description={social.description} ></ItemEducacion>
            ))
        }
    </ol>

    <footer class="mt-20 flex flex-col justify-center items-center relative max-w-7xl w-full">

        <div class="-z-10 absolute inset-0 w-full h-full overflow-hidden">
            <svg width="100%" height="100%" class="absolute opacity-10 dark:opacity-30 text-black dark:text-white">
              <defs>
  
                <pattern id="connected-circuits" x="0" y="0" width="150" height="150" patternUnits="userSpaceOnUse">
                  <path d="M10 75 H140" stroke="#333" stroke-width="1" fill="none" />
                  <path d="M75 10 V140" stroke="#333" stroke-width="1" fill="none" />
                  <circle cx="75" cy="75" r="3" fill="#333" />
                  <path d="M75 75 L110 40" stroke="#333" stroke-width="1" fill="none" />
                  <path d="M75 75 L40 110" stroke="#333" stroke-width="1" fill="none" />
                </pattern>
  
                <mask id="fade-mask">
                  <rect width="100%" height="100%" fill="url(#fade-gradient)" />
                </mask>
  
                <radialGradient id="fade-gradient" cx="50%" cy="50%" r="70%">
                  <stop offset="0%" stop-color="white" />
                  <stop offset="100%" stop-color="black" />
                </radialGradient>
  
              </defs>
  
              <rect width="100%" height="100%" fill="url(#connected-circuits)" mask="url(#fade-mask)" class="text-gray-400 dark:text-gray-600" />
            </svg>
          
            <div class="absolute inset-0 opacity-5 dark:opacity-30">
              <div class="absolute left-[10%] top-[20%] text-xs font-mono text-gray-900 dark:text-gray-200">0</div>
              <div class="absolute left-[20%] top-[50%] text-xs font-mono text-gray-900 dark:text-gray-200">1</div>
              <div class="absolute left-[35%] top-[15%] text-xs font-mono text-gray-900 dark:text-gray-200">0</div>
              <div class="absolute left-[45%] top-[65%] text-xs font-mono text-gray-900 dark:text-gray-200">1</div>
              <div class="absolute left-[55%] top-[35%] text-xs font-mono text-gray-900 dark:text-gray-200">0</div>
              <div class="absolute left-[70%] top-[60%] text-xs font-mono text-gray-900 dark:text-gray-200">1</div>
              <div class="absolute left-[85%] top-[25%] text-xs font-mono text-gray-900 dark:text-gray-200">0</div>
            </div>
          </div>
          
        <h2 class="relative text-center text-lg sm:text-2xl md:textl-3xl font-mono text-blue-400 dark:text-blue-300">Tecnlogias Preferidas

            <span class="absolute w-1/2 h-1 top-10 left-1/2 translate-x-[-50%] bg-slate-800 dark:bg-slate-600"></span>

        </h2>
        <div class="mt-15 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-5">
    
            {MAIN_TECNOLOGIES.map((technology) => (   
            <a href={technology.website} target="_blank" rel="noopener noreferrer" aria-label={`Tecnología ${technology.name}`} role="button">
                <PixelCard variant={technology.name} className="pixel-card group" client:only="react">
                    <div class="relative">
                        
                        <technology.icon class={`pixel-card-tech-icon-${technology.name} z-10 size-15 saturate-0 group-hover:scale-150 group-hover:saturate-200 transition-all duration-300`}/>
                        <technology.icon class="-z-1 absolute top-0 size-15 saturate-0 group-hover:scale-150 group-hover:blur-md group-hover:saturate-200 transition-all duration-300"/>
                    </div>

<style>

    @media (width >= 360px ) {
        .pixel-card.pixel-card-tech-icon-astro:hover,
        .pixel-card.pixel-card-tech-icon-react:hover,
        .pixel-card.pixel-card-tech-icon-tailwind:hover,
        .pixel-card.pixel-card-tech-icon-preact:hover,
        .pixel-card.pixel-card-tech-icon-html:hover,
        .pixel-card.pixel-card-tech-icon-css:hover,
       .pixel-card.pixel-card-tech-icon-js:hover,
       .pixel-card.pixel-card-tech-icon-ts:hover,
       .pixel-card.pixel-card-tech-icon-git:hover {
            transform: scale(1.5);
            filter: saturate(200);
        }
    }

</style>

                </PixelCard>
            </a>
                    ))}
        </div>
    </footer>

</SectionContainer>
